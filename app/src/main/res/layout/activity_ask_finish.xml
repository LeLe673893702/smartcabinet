<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".page.askfinish.AskFinishActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ask_finish_warning_text"
        android:textSize="@dimen/base_text_1_size"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/base_text_1_color"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/btSure"
        android:textSize="@dimen/base_text_2_size"
        android:background="@color/buttonBg"
        android:text="确认"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/btQuit"
        android:textSize="@dimen/base_text_2_size"
        android:background="@color/red"
        android:text="返回"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        />


</LinearLayout>